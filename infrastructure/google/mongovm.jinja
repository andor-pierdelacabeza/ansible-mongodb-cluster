resources:
- type: compute.v1.instance
  name: {{ properties["name"] }}
  properties:
    zone: europe-west1-d
    # Replace [MY_PROJECT] with your project ID
    machineType: https://www.googleapis.com/compute/v1/projects/tce-sistemas-1470204626833/zones/europe-west1-d/machineTypes/f1-micro
    metadata:
      items:
        - key: client
          value: march
        - key: app
          value: mongodb
        {% for item in properties["metadata"]["items"] %}
        - key: {{ item.key }}
          value: {{ item.value }}
        {% endfor %}
    disks:
    - deviceName: boot
      type: PERSISTENT
      boot: true
      autoDelete: true
      initializeParams:
        # Replace [FAMILY_NAME] with the image family name.
        # See a full list of image families at https://cloud.google.com/compute/docs/images#os-compute-support
        sourceImage: https://www.googleapis.com/compute/v1/projects/rhel-cloud/global/images/family/rhel-7
    networkInterfaces:
    - network: https://www.googleapis.com/compute/v1/projects/tce-sistemas-1470204626833/global/networks/default
      accessConfigs:
      - name: External NAT
        type: ONE_TO_ONE_NAT

